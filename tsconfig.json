{
  "compilerOptions": {
    "target": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "declaration": true,
    "noUnusedLocals": true,
    "esModuleInterop": true,
    "outDir": "dist",
    "module": "commonjs",
    "sourceMap": false,
    "noEmitOnError": true,
    "strictNullChecks": false,
    "lib": [
      "ESNext"
    ],
    "types": [
      "vite/client",
      "node"
    ]
  },
  "include": [
    "./src",
    "tests/**/*"
  ],
  "exclude": [
    "**/dist",
    "**/node_modules"
  ]
}